{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>{{ auction.title }}</h4>
        </div>
        <div class="panel-body">
            <p>{{ auction.description }}</p>
        </div>

        <ul class="list-group">
            <li class="list-group-item">Cena: {{ auction.price }} zł</li>
            <li class="list-group-item">Cena wywoławcza: {{ auction.startingPrice }} zł</li>
            <li class="list-group-item">Aukcja kończy się: {{ auction.expiresAt | date("Y-m-d H:i:s") }}</li>
        </ul>
    </div>
    <div class="panel panel-default">
        <ul class="list-group">
            {% for offer in auction.offers %}
                <li class="list-group-item">Oferta {{ offer.price }} zł, złożona {{ offer.createdAt | date("Y-m-d H:i:s") }}</li>
            {% else %}
                <li class="list-group-item"><b>Żadna oferta kupna tej aukcji nie została dotychczas złożona.</b></li>
            {% endfor %}
        </ul>
    </div>

    <a class="btn btn-default pull-left" href="{{ url('auction_index') }}">Powrót</a>

    {% if is_granted("ROLE_USER") %}
        {{ form_start(buyForm, {"attr": {"class": "pull-left"}}) }}
            {{ form_widget(buyForm.submit, {"attr": {"class": "btn-success"}}) }}
            {{ form_rest(buyForm) }}
        {{ form_end(buyForm) }}
    {% endif %}

    <div class="clearfix"></div>

    {% if is_granted("ROLE_USER") %}
        {{ form(bidForm, {"attr": {"novalidate": "novalidate"}}) }}
    {% endif %}

    {% if not is_granted("ROLE_USER") %}
        Żeby kupować musisz się zalogować
    {% endif %}
{% endblock %}